<h1>Edit Your New Order</h1><br><br>

<form action="/orders/<%= @order.id %>" method="POST">
    <input type="hidden" value="PATCH" name="_method"> 
        <label>Order Number: <%= @order.id %></label><br><br>

        <label>Date of Order:</label>
            <input type="date" name="order_date" value="<%= @order.order_date %>" id="order_date"><br><br>
        <label>Please tell us a description of your project:</label><br>
            <textarea type="textarea" name="order_description" value="<%= @order.order_description %>" id="customer_order_description" cols="80" rows="10"></textarea><br><br>
        <input type="submit" value="Edit Order">
</form>
<h1>Signup Page</h1><br>

<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>
<br><br>

<form action="/registrations/customer_signup" method="POST">
    <label>First Name:</label>
    <input type="text" name="first_name" id="first_name" placeholder="(required)"><br><br>
    <label>Last Name:</label>
    <input type="text" name="last_name" id="last_name" placeholder="(required)"><br><br>
    <label>Email:</label>
    <input type="text" name="email" id="customer_email" placeholder="(required)"><br><br>
    <label>Password:</label>
    <input type="text" name="password" id="customer_password" placeholder="(required)"><br><br>
    <label>Address:</label>
    <input type="text" name="address" id="address" placeholder="(required)"><br><br>
    <label>Phone:</label>
    <input type="text" name="phone_1" id="phone_1" placeholder="(required)"><br><br>
    <label>Alt. Phone:</label>
    <input type="text" name="phone_2" id="phone_2"><br><br>
    <label>Fax:</label>
    <input type="text" name="fax" id="fax"><br><br>
    <input type="submit" id="Sign Up">
</form>
